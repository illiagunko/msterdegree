apiVersion: apps/v1beta2
kind: Deployment
metadata:
  name: hello-deploy
spec:
  replicas: 2
  selector:
    matchLabels:
      app: demonstration
  minReadySeconds: 10
  strategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 1
      maxSurge: 1
  template:
    metadata:
      labels:
        app: demonstration
    spec:
      containers:
      - name: hello-pod
        image: illiagunko/msterdegree:latest
        ports:
        - containerPort: 8080
